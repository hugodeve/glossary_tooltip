<?php
/**
 * Implements hook_install().
 */
function glossary_tooltip_install() {
    // Create the vocabulary for glossary terms.
    $vocabulary = \Drupal\taxonomy\Entity\Vocabulary::create([
      'vid' => 'glossary',
      'name' => 'Glossary',
      'description' => 'Vocabulary for glossary terms.',
    ]);
    $vocabulary->save();
  }
  